<div class='row'>
	<div class='span1 text-center well'>
		<%= link_to "Click to Upvote", vote_post_path(post, vote: true), method: 'post' %>
		<br/>
		<%= "total: " + post.total_votes.to_s %>
		<br/>
		<%= link_to "Downvote", vote_post_path(post, vote: false), method: 'post' %>

	</div>


	<div class="span6 well">

		<h4><%= link_to post.title, fix_url(post.url), :target => :blank %><% if current_user == post.user %><%= link_to 'edit', edit_post_path(post), {:class => 'btn btn-primary'} %>
		
			<% end %>
			</h4>
			<p><%= post.description %></p>
			<p><span> Posted by: </span><%= post.user.username %> at <small><%= post.created_at.to_s %></small></p>
	<p><%= link_to "#{post.comments.count} (Add comment)", post_path(post) %></p>
	</div>
</div>
